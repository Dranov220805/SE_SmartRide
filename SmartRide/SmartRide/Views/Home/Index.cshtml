@{
    ViewData["Title"] = " Your Rides, Made Simple";
}
<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="fw-bold">City Rides, Made Simple.</h1>
            <p class="text-muted">
                Book cars or motorbikes in seconds, track your driver in real-time, and pay online.
                SmartRide connects you with reliable rides — fast, easy, and always there when you need it.
            </p>
            <div class="mb-4">
                <a class="btn btn-dark me-2" asp-controller="Home" asp-action="BookRide">Book a Ride</a>
